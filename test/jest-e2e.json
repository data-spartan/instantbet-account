{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleDirectories": ["<rootDir>/../", "node_modules"],
  "moduleNameMapper": {
    "@app/([^/]*)/(.*)": "<rootDir>../src/libs/$1/src/$2",
    "@app/(.*)": "<rootDir>../src/libs/$1/src"
  }
}
